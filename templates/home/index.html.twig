{% extends 'base.html.twig' %}

{% block title %}We-Movies{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">A propos de We Movies</a>
            <div class="float-right" id="navbarColor02">
                <form class="d-flex">
                    <input class="form-control me-sm-2" name="search" type="text" placeholder="Recherche">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <fieldset class="form-group">
            <legend class="mt-4">Genres</legend>
            {% for genre in data %}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        {{ genre.name }}
                    </label>
                </div>
            {% endfor %}
        </fieldset>
    </div>
{% endblock %}
