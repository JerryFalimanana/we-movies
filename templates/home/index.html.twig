{% extends 'base.html.twig' %}

{% block title %}We-Movies{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">A propos de We Movies</a>
            <div class="float-right" id="navbarColor02">
                <form class="d-flex">
                    <input class="form-control me-sm-2" name="search" type="text" placeholder="Recherche">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row my-4">
            <video class="mx-auto" height="300" width="650" controls>
                <source src="{{ topRatedVideo }}" type="video/mp4">
            </video>
      </iframe>
        </div>
        <div class="row">
            <div class="col-4">
                <fieldset class="form-group">
                    <legend class="mt-4">Genres</legend>
                    {% for genre in genres %}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                {{ genre.name }}
                            </label>
                        </div>
                    {% endfor %}
                </fieldset>
            </div>
            <div class="col-8">
                {% for movie in topMovies %}
                    <div class="card border-secondary mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3">
                                    <img src="https://image.tmdb.org/t/p/original{{ movie.poster_path }}" alt="" style="max-height: 200px;">
                                </div>
                                <div class="col-9">
                                    <h4 class="card-title">
                                        {{ movie.title }}
                                        <span>({{ movie.vote_count }} votes)</span>
                                    </h4>
                                    <p class="card-text">{{ movie.release_date }}</p>
                                    <p class="card-text">{{ movie.overview }}</p>
                                    <a href="" class="btn btn-info float-right">Lire le details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
